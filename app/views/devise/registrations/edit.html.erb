<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :location  %><br />
  <%= f.text_field :location %></div>

  <div><%= f.label :email %><br />
  <%= f.text_field :email %></div>

  <h3>Current Profile Picture</h3>
  
  <div id='user-profile'>

  <% resource.photos.each do |photo| %>

    <div class='profile-pictures-container'>
  
    <%= link_to(photos_path(id: photo.id), method: :delete, :remote => true, class: 'image-deleter')  do %>
      
      <%= image_tag photo.image_url, class: 'profile-picture' %>
    
    <% end %>

    </div>
 
  <% end %>

 </div>

 <button id='more_images'>Select from more images</button>

  <div id='fb-selection'>

    <h3>Pick a Picture</h3>

    <% resource.profile_pictures.each do |photo| %>
    
    <div class='select-pictures-container'>
    
      <%= link_to(photos_path(image_url: photo['images'][0]['source']), method: :post, :remote => true, class: 'image-adder')  do %>

        <%= image_tag photo['images'][0]['source'], class: 'fb_picture' %>
      
      <% end %>
    
    <% end %>

    <% resource.tagged_pictures.each do |photo| %>
      
      <%= link_to(photos_path(image_url: photo), method: :post, :remote => true, class: 'image-adder') do %>
        
        <%= image_tag photo, class: 'fb_picture' %>
      
      <% end %>

    </div>
    
    <% end %>
  
  </div>


  <div>
  <%= f.submit "Update" %>
  </div>
<% end %>



<h4>Cancel my account</h4>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>


<script>


$(document).ready(function(){

  $('#fb-selection').hide();

  $('#more_images').click (function(event) {
    event.preventDefault();
    $('#fb-selection').slideDown();
  });

  $('.image-deleter').on('ajax:complete', function() {
    $(this).remove();
  });

  $('.image-adder').on('ajax:complete', function() {
    $('#user-profile').append($(this));
  });


});


</script>