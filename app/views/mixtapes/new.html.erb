<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Add A Song</h3>
        </div>
        <div class="panel-body">
          <%= render 'add_track_form' %>
          <%= render 'mixtape_name_form', button_text: 'Edit Mixtape Title' %>
          <% if !user_signed_in? %>
            <%= link_to 'FINISH MIXING!', user_omniauth_authorize_path( :facebook ), id: 'fb-auth', class: 'btn btn-primary btn-lg' %>
            <% end %>
          <div id="song-details">
            <%= render 'tracks_with_details' %>
          </div>
        </div>
      </div>
    </div><!--column left -->
    <div class="col-md-6">
      <div class="panel panel-default" id="user-mixtape-tracklist">
        <div class="panel-heading">
          <h2 class="panel-title">{{title}}</h2>
        </div>
        <div class="panel-body">
          <ul class="track-listing">
            <% @tracks.each do |track| %>
              <%= render 'cassette_track', mustache: track.as_json.merge(mixtape_id: @mixtape.id) %>
            <% end %>
          </ul>
        </div> <!-- .panel-body  -->
      </div><!-- #tracklist-panel -->
    </div><!-- col -->
  </div><!-- row -->
</div> <!-- container -->
<script type='text/template' id='playlist-template'>
  <%= render 'cassette_track' %>
</script>

