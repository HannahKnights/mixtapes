<script type="text/template" id="song-details-with-preview-template">
  <div class="track-details">
    <img src="{{ release_image }}">
    <div class="track-text">
      <p class="artist-name">{{ artist_name }}</p>
      <p class="track-title">{{ title }}</p>
      <p>{{ duration.minutes }}:{{ duration.seconds }}</p>
    </div>
    <audio src="{{ preview_url }}" controls>
      <p>Your browser does not support the audio element.</p>
    </audio>
    <a class="add-track" href="#" data-echonest-song-id="{{ id }}">Add Track</a>
  </div>
</script>