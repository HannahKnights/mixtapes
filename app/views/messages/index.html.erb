<h1>
  Inbox 
</h1>

<div class = "message" >
  <% @received_messages.each do |message| %>
    <h3>
    <%= message.find_user_name(message) %>
    </h3>
    <h3>
    <%= message.subject %>
    </h3>
    <h4>
    <%= message.body %>
    </h4>
    <h5>
    <%= link_to 'Reply', new_message_path(reply_to: message.id) %>
    </h5>
    <%= link_to 'Delete', message_path(message), method: :delete, data: { confirm: "Are you sure?"} %>

  <% end %>
</div>


