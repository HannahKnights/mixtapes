<%= form_for @message, html: { class: 'form-horizontal' } do |form| %>
  <div class='form-group'>
    <%= hidden_field_tag :recipient_id, @send_to.id %>
  </div>

  <div class='form-group'>
    
    <div class='col-sm-12 new-message-recipient'>
      <%= @send_to.name%>
    </div>
    
    <div class='col-sm-12 new-message-recipient'>
      <%= text_area_tag :body, '', class: "form-control", rows: "5", placeholder: "Enter your message here" %>
    </div>
  </div>

  <div = class='form-group'>
    <div class='col-sm-10 col-sm-offset-2'>
      <%= form.button 'Send', class: "btn-message back-button btn-new-message"%>
    </div>
  </div>
<% end %>