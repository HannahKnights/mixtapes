<div class="col-md-4 col-md-offset-4">
  <div class="welcome_tape">
    <%= image_tag("welcome_tape.png", class: "welcome_tape_image")%>
    </div>
    <div class="tape-label">
    <h2 class="text-center">{{title}}</h2>
  </div>


  <div class="create_form center-block">
    <%= form_for(@mixtape, :url => new_mixtape_path, :welcome => { :action => :post }, html: { id: 'update_name_homepage', class: 'form-horizontal' })  do |form| %>
    <div class='form-group'>
      <%= form.text_field :title, 'ng-model' => 'title', 'ng-init' => "title='#{escape_javascript @mixtape.title}'" %>
    </div>
    <div class='form-group'>
    <%= form.submit 'Create Your Mixtape', :class => 'btn btn-send' %>
    </div>
    <% end %>
  </div>
</div>





